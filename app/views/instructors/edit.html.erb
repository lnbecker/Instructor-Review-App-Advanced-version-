<div class="col-md-6 col-md-offset-3">

	<div class="edit-instructor-form">

		<h1>Edit Book</h1>
		<!-- Makes sure category is already filled in when instructor profile is edited-->
		<%= simple_form_for @instructor, :html => {:multipart =>  true} do |f| %>
			<%= f.select :category_id, @categories %>
			<%= f.file_field :instructor_img %>
			<%= f.input :name, label: "Instructor Name" %>
			<%= f.input :description %>
			<%= f.input :format, label: "Class format" %>
			<%= f.button :submit, :class => "btn-custom2" %>
		<% end %>

	</div>

</div>


